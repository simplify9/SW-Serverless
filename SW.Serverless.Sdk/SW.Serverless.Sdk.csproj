<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8</TargetFramework>
        <PackageId>SimplyWorks.Serverless.Sdk</PackageId>
        <Authors>Simplify9</Authors>
        <Product>SimplyWorks.Serverless.Sdk</Product>
        <PackageProjectUrl>https://github.com/simplify9/Serverless</PackageProjectUrl>
        <RepositoryUrl>https://github.com/simplify9/Serverless</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon>icon.png</PackageIcon>
        <Copyright>Simplify9</Copyright>
        <Company>Simplify9</Company>
        <Description>SDK for developing .NET serverless adapters with the Runner class, logging utilities, and adapter communication protocols. See https://github.com/simplify9/SW-Serverless for full documentation.</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="SimplyWorks.PrimitiveTypes" Version="8.0.0" />
    </ItemGroup>
    <ItemGroup>
        <None Include="../icon.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>

</Project>
